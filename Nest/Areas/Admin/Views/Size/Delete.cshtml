@{
    ViewData["Title"] = "Size";
}
@model Size

<form asp-controller="Size" asp-action="Delete" method="post">
    <input asp-for="Id" style="display:none;" />
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input disabled type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Name"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Size" asp-action="Index" class="btn btn-secondary mx-2">Back to list</a>
</form>